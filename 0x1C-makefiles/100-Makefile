CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
.PHONY: all clean fclean oclean re
all: $(NAME)
$(NAME):
	@$(CC) $(CFLAGS) $(SRC) -o $(NAME)
clean:
	@find . -type f -name "*~" -delete
oclean:
	@find . -type f -name "*.o" -delete
fclean: clean oclean

re: fclean all
